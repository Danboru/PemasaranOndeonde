<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/txtNamaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Nama User"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="150dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/txtJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_below="@+id/txtNamaUser"
            />

        <TextView
            android:id="@+id/txtPrediksiPembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prediksi Pembelian"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/txtVerifikasiPembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Belum Di Verifikasi"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>